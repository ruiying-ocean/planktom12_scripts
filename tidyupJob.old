#SBATCH -t 06:00:00 
#SBATCH --job-name=tidyup
#SBATCH -o tidy-%j.log
#SBATCH -e tidy-%j.log  
#SBATCH --mem 32G

echo "Tidying up: " $modelDir $yearToTidy $Model

module add gcc netcdf/4.7.4/parallel/gcc-openmpi hdf5/1.10.6/gcc-openmpi mpi/openmpi/4.0.3/gcc/ib perl
#module add python/anaconda/2024.10/3.12.7
module add ferret/7.6.0

# Initialize Conda (change path as needed)
source /gpfs/home/vhf24tbu/miniforge3/etc/profile.d/conda.sh

# Activate your environment (change 'base' to your environment name)
conda activate base

# Go to model directory (/baseDir/<run ID>)
cd $modelDir

# Run tidy-up script
./tidyup.sh $yearToTidy $yearToTidy $Model $basedir
